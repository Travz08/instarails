<% if user_signed_in? %>

  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-link disabled", style: "color: #fff;") %>

<% else %>
  <% if params[:action] != "new" %>
    <%= link_to('Login', new_user_session_path, class: "nav-link disabled", style: "color: #fff;") %>
  <% end %>
<% end %>
